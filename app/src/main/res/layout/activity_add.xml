<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity"
    android:orientation="vertical"
    android:padding="30dp">
    <TextView
        android:text="Add Employee"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edt_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Employee ID"/>
    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Employee Nmae"/>
    <EditText
        android:id="@+id/edt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Employee Address"/>
    <EditText
        android:id="@+id/edt_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Employee Phone"/>
    <EditText
        android:id="@+id/edt_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Employee Salry"/>
    <EditText
        android:id="@+id/edt_designation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Employee Designation"/>
    <Button
        android:id="@+id/btn_add"
        android:text="Add data"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="AddData"/>

</LinearLayout>